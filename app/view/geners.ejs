<% include components/top_block %>
<section class="view view_1 view_geners">

	<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
	 style="position:absolute;width:0;height:0;overflow:hidden;">
		<symbol id="icon-arrow_1" fill="none" viewBox="0 0 28 22" id=".503836995956918"
		 xmlns="http://www.w3.org/2000/svg">
			<path fill-rule="evenodd" clip-rule="evenodd" d="M28 4L10 22 0 12l4-4 6 6L24 0l4 4z"
			 fill="#fff" />
		</symbol>
	</svg>

	<form action="/love-movie-search" class="view_cont">
		<div class="view_cont-wrap">
			<% Object.keys(geners).map((i) => { %>
			<% const gener = geners[i] %>
			<input id="view_itm-input_<%= i %>" class="view_itm-in" type="checkbox" name="geners[]"
			 value="<%- gener.name %>">
			<label for="view_itm-input_<%= i %>" class="view_itm">
				<div class="view_itm-img"><img class="img-label" src="<%- gener.img %>"></div>
				<svg class="svg view_svg-check">
					<use href="#icon-arrow_1" />
				</svg>
				<p class="view_itm-title">
					<%- gener.name %>
				</p>
			</label>
			<% }); %>
			<div class="view_cont-bottom">
				<button type="reset" class="view_cont-bottom-link view_cont-bottom-link__of btn">Отменить</button>
				<button type="submit" class="view_cont-bottom-link btn">Далее</button>
			</div>
		</div>
	</form>
</section>

<script src="/public/js/initSlick.js"></script>